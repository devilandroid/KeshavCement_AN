<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@color/colorPrimaryDark"
    tools:context=".ui.redemptionCatalogue.RedemptionTypeFragment">
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:background="@drawable/gift_bg"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:src="@drawable/gifts"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center"
                android:text="@string/redeemable_points"
                android:textColor="@color/colorAccent"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/redeem_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center"
                android:text="-"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />
        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:src="@drawable/redemptiontypeimg"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:fontFamily="@font/poppins_semibold"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:text="@string/redeem_your_earned_points_in_various_ways"
        android:textColor="@color/colorAccent"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.1"
        android:orientation="vertical"
        android:backgroundTint="@color/colorAccent"
        android:background="@drawable/refer_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/select_redemption_type"
            android:textColor="@color/dark"
            android:textSize="14sp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">


               <!-- Product -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/products"
                    android:layout_width="150dp"
                    android:layout_height="190dp"
                    app:cardCornerRadius="10dp"
                    android:elevation="10dp"
                    app:cardBackgroundColor="@color/color42"
                    android:layout_marginStart="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="125dp"
                            android:layout_height="120dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/products"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="@string/product_catalogue"
                            android:layout_margin="10dp"
                            android:textColor="@color/dark"
                            android:textSize="14sp" />


                    </LinearLayout>



                </androidx.cardview.widget.CardView>

               <!-- eVoucher -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/evouchers"
                    android:layout_width="150dp"
                    android:layout_height="190dp"
                    app:cardCornerRadius="10dp"
                    android:elevation="10dp"
                    app:cardBackgroundColor="@color/color43"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="125dp"
                            android:layout_height="120dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/evouchers"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="@string/evouchers"
                            android:layout_margin="10dp"
                            android:textColor="@color/dark"
                            android:textSize="14sp" />


                    </LinearLayout>



                </androidx.cardview.widget.CardView>

                <!-- Cash Transfer/ Cash Voucher -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cashtransfer"
                    android:layout_width="150dp"
                    android:layout_height="190dp"
                    app:cardCornerRadius="10dp"
                    android:elevation="10dp"
                    app:cardBackgroundColor="@color/color44"
                    android:layout_marginEnd="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="125dp"
                            android:layout_height="120dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/cashvouchers"/>

                        <TextView
                            android:id="@+id/cash_transfer_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="@string/cash_transfer"
                            android:layout_margin="10dp"
                            android:textColor="@color/dark"
                            android:textSize="14sp" />


                    </LinearLayout>



                </androidx.cardview.widget.CardView>

                <!-- Wishlist -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/wishlist"
                    android:layout_width="150dp"
                    android:layout_height="190dp"
                    app:cardCornerRadius="10dp"
                    android:elevation="10dp"
                    app:cardBackgroundColor="@color/color62"
                    android:layout_marginEnd="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="125dp"
                            android:layout_height="120dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/wishlist"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="@string/wishlist"
                            android:layout_margin="10dp"
                            android:textColor="@color/dark"
                            android:textSize="14sp" />


                    </LinearLayout>



                </androidx.cardview.widget.CardView>

            </LinearLayout>


        </HorizontalScrollView>
    </LinearLayout>





</LinearLayout>