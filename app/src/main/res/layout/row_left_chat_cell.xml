<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10.40dp"
    android:layout_marginTop="10.40dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginRight="52dp"
        android:layout_marginBottom="2dp">



        <ImageView
            android:id="@+id/chatImage"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/pdf"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="52dp"
        android:text=""
        android:textSize="18.20dp"
        android:textColor="@color/black"
        android:layout_marginBottom="5dp"
        android:visibility="gone"

        android:elevation="10.40dp"
        android:padding="10.40dp"/>

    <TextView
        android:id="@+id/row_query_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/corner_three_side2"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="4dp"
        android:elevation="1dp"
        android:padding="19.50dp"
        android:text="xx xxxx xxxx xxx xxxx"
        android:textColor="@color/colorAccent"
        android:textSize="12sp"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/row_query_missed_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_phone_missed"/>

    <TextView
        android:id="@+id/row_query_sender"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="2dp"
        android:layout_marginStart="4dp"
        android:layout_marginRight="52dp"
        android:elevation="10.40dp"
        android:text="xx xxxx xxx"
        android:textColor="@color/color28"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginStart="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/row_query_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5.20dp"
            android:layout_marginEnd="10dp"
            android:gravity="start|center_horizontal"
            android:text="xx xxx xx xx"
            android:textColor="@color/color29"
            android:textSize="10sp"/>
    </LinearLayout>

</LinearLayout>
