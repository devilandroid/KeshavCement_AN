<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.claimPurchase.ClaimPurchaseFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_corner_bg"
        android:orientation="vertical"
        android:paddingTop="25dp"
        android:paddingBottom="25dp"
        android:paddingStart="35dp"
        android:paddingEnd="35dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/user_type"
                android:textColor="@color/colorAccent"
                android:textSize="12sp" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/claim_spinner_bg"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/name"
                android:textColor="@color/colorAccent"
                android:textSize="12sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/refer_edttxt_bg">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:fontFamily="@font/poppins_regular"
                    android:paddingStart="10dp"
                    android:paddingEnd="20dp"
                    android:text="@string/xxxxxx"
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/search"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="15dp"/>



            </RelativeLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/select_product"
                android:textColor="@color/colorAccent"
                android:textSize="12sp" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/claim_spinner_bg2"/>

        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/enter_quantity"
                android:textColor="@color/colorAccent"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|end">

                <androidx.cardview.widget.CardView
                    android:layout_width="130dp"
                    android:layout_height="45dp"
                    app:cardCornerRadius="20dp"
                    android:backgroundTint="@color/color12">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:text="-"
                            android:textColor="@color/white"
                            android:fontFamily="@font/poppins_bold"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:background="@drawable/quantity_bg"
                            android:layout_marginStart="5dp"/>

                        <EditText
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:backgroundTint="@color/white"
                            android:fontFamily="@font/poppins_bold"
                            android:gravity="center"
                            android:inputType="number"
                            android:text="0"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:text="+"
                            android:textColor="@color/white"
                            android:fontFamily="@font/poppins_bold"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:gravity="center"
                            android:background="@drawable/quantity_bg"
                            android:layout_marginEnd="5dp"/>


                    </RelativeLayout>


                </androidx.cardview.widget.CardView>
            </LinearLayout>


        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_profile_bg"
            android:backgroundTint="@color/colorAccent"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/swipe_to_claim"
            android:textAllCaps="false" />


    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/claim_img"
        android:scaleType="fitXY"
        android:layout_gravity="bottom"/>

</LinearLayout>