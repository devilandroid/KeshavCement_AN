<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        app:cardBackgroundColor="#313038"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="6.5dp"
                android:paddingBottom="6.5dp"
                android:text="@string/please_submit_your_query_using_this_form"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="6.5dp"
                android:layout_marginEnd="6.5dp"
                android:layout_marginBottom="6.5dp"
                app:cardCornerRadius="8dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">


                    <EditText
                        android:id="@+id/mobile_number"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="18dp"
                        android:background="@drawable/edit_profile_bg"
                        android:hint="@string/enter_mobile_number"
                        android:inputType="number"
                        android:paddingStart="20dp"
                        android:textColor="@color/black"
                        android:textColorHint="#828C9F"
                        android:textSize="20dp"
                        android:visibility="gone" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6.5dp"
                        android:layout_marginTop="6.5dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/select_your_topic"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_margin="6.5dp"
                        android:background="@drawable/claim_spinner_bg2"
                        android:elevation="10dp"
                        android:orientation="vertical">

                    </Spinner>

                    <TextView
                        android:id="@+id/abb"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6.5dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/query_summary"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_margin="6.5dp"
                        android:background="@drawable/refer_edttxt_bg"
                        android:backgroundTint="@color/colorAccent"
                        android:elevation="10dp"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/query_summary"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:hint="@string/write_query"
                            android:maxHeight="65dp"
                            android:paddingStart="20dp"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:visibility="visible" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6.5dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/query_details"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="6.5dp"
                        android:background="@drawable/refer_edttxt_bg"
                        android:backgroundTint="@color/colorAccent"
                        android:elevation="10dp"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/query_details"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:backgroundTint="@color/colorAccent"
                            android:gravity="start|center"
                            android:hint="@string/write_query_details"
                            android:paddingStart="20dp"
                            android:textColor="@color/black"
                            android:textColorHint="#828C9F"
                            android:textSize="12sp"
                            android:visibility="visible" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/set_img"
                            android:layout_width="150dp"
                            android:layout_height="180dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:src="@drawable/ic_baseline_cloud_upload_24" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="6.5dp"
                            android:layout_weight="5">

                            <LinearLayout
                                android:id="@+id/browseImg"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/refer_edttxt_bg"
                                android:backgroundTint="@color/colorPrimaryDark">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_medium"
                                    android:gravity="center"
                                    android:paddingTop="10dp"
                                    android:paddingBottom="10dp"
                                    android:text="@string/browse_image"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6.5dp"
                            android:layout_weight="5">

                            <LinearLayout
                                android:id="@+id/query_submit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/refer_edttxt_bg"
                                android:backgroundTint="@color/colorPrimaryDark">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_medium"
                                    android:gravity="center"
                                    android:paddingTop="10dp"
                                    android:paddingBottom="10dp"
                                    android:text="@string/submit_query"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>