<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10.40dp"
    android:layout_marginRight="10.40dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="52dp"
        android:layout_marginBottom="2dp">
        <ImageView
            android:id="@+id/chatImage"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:visibility="gone"
            tools:src="@tools:sample/avatars" />
    </LinearLayout>

    <TextView
        android:id="@+id/pdf"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="52dp"
        android:text=""
        android:textSize="18.20dp"
        android:layout_gravity="right"
        android:layout_marginBottom="5dp"
        android:visibility="gone"
        android:textColor="@android:color/white"
        android:elevation="10.40dp"
        android:padding="10.40dp"/>


    <TextView
        android:id="@+id/row_query_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/corner_three_side"
        android:layout_gravity="right"
        android:layout_marginLeft="52dp"
        android:elevation="1dp"
        android:padding="15dp"
        android:text="xxxxx x xxxx xxxx xxx xx"
        android:textColor="@color/colorAccent"
        android:textSize="12sp"
        android:fontFamily="@font/poppins_regular"/>

    <ImageView
        android:id="@+id/row_query_missed_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_phone_missed"/>


    <TextView
        android:id="@+id/row_query_sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="5.20dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="5dp"
        android:text="xxx"
        android:textColor="@color/colorAccent"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="2dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/row_query_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="5.20dp"
            android:gravity="end|center_horizontal"
            android:text="xx xxx xx xx"
            android:textColor="@color/colorAccent"
            android:textSize="10sp"
            android:fontFamily="@font/poppins_regular"/>
    </LinearLayout>

</LinearLayout>

