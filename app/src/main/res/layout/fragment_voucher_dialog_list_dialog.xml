<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorAccent"
    android:weightSum="10">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/group_1017"
            android:padding="20dp">
            <ImageView
                android:id="@+id/voucher_imgs"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_default_img"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <TextView
            android:id="@+id/category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Evoucher / Amazon"
            android:fontFamily="@font/poppins_regular"
            android:textSize="10sp"
            android:textColor="@color/dark"/>
        <TextView
            android:id="@+id/detail_voucher_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amazon Gift Voucher"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="18sp"
            android:textColor="@color/dark"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:weightSum="10"
        android:padding="10dp"
        android:orientation="vertical"
        android:background="@drawable/top_corner_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:scrollbars="none">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="Voucher Description"
                            android:textColor="@color/colorAccent"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/detailDesc_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/poppins_regular"
                            android:text="XXX XXX XX XX XXX XXX \nXXX XXX\nXX XXX \nXXXX \nXX"
                            android:textColor="@color/colorAccent"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="Terms and Conditions"
                            android:textColor="@color/colorAccent"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/detailtc_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/poppins_regular"
                            android:text="XXX XXX XX XX XXX XXX \nXXX XXX\nXX XXX \nXXXX \nXX"
                            android:textColor="@color/colorAccent"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>
            </ScrollView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="15dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@color/colorAccent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:orientation="vertical">

                            <Spinner
                                android:id="@+id/mng_price_spinner"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/corner_bg4"
                                android:backgroundTint="@color/color47"
                                android:visibility="gone" />

                            <EditText
                                android:id="@+id/amount"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:gravity="center_vertical"
                                android:background="@drawable/corner_bg4"
                                android:backgroundTint="@color/color47"
                                android:hint="@string/enter_amount"
                                android:inputType="number"
                                android:maxLength="6"
                                android:paddingStart="10sp"
                                android:textSize="12sp"
                                android:visibility="visible" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:gravity="end">

                            <LinearLayout
                                android:id="@+id/redeem_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:paddingStart="30dp"
                                android:paddingEnd="30dp"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:background="@drawable/corner_bg4"
                                android:backgroundTint="@color/colorPrimaryDark">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Redeem"
                                    android:fontFamily="@font/poppins_medium"
                                    android:textSize="12sp"
                                    android:textColor="@color/colorPrimary"/>
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Points"
                            android:fontFamily="@font/poppins_medium"
                            android:textSize="10sp"
                            android:textColor="@color/dark"/>

                        <TextView
                            android:id="@+id/points_100"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"
                            android:background="@drawable/corner_bg4"
                            android:layout_marginStart="10dp"
                            android:text="+ 100"
                            android:fontFamily="@font/poppins_medium"
                            android:textSize="10sp"
                            android:textColor="@color/dark"/>

                        <TextView
                            android:id="@+id/points_200"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"
                            android:background="@drawable/corner_bg4"
                            android:layout_marginStart="10dp"
                            android:text="+ 200"
                            android:fontFamily="@font/poppins_medium"
                            android:textSize="10sp"
                            android:textColor="@color/dark"/>

                        <TextView
                            android:id="@+id/points_300"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"
                            android:background="@drawable/corner_bg4"
                            android:layout_marginStart="10dp"
                            android:text="+ 300"
                            android:fontFamily="@font/poppins_medium"
                            android:textSize="10sp"
                            android:textColor="@color/dark"/>
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>