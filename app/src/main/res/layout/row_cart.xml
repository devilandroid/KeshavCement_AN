<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    app:cardBackgroundColor="@color/colorAccent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/remove_cart_item"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="8dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/close"
            app:tint="@color/colorPrimary" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.5"
            android:layout_margin="3dp"
            android:gravity="center"
            android:background="@drawable/corner_bg3"
            android:backgroundTint="@color/color51">

            <ImageView
                android:id="@+id/productImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/ic_default_img"
                android:layout_gravity="center"/>

        </LinearLayout>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6.5"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingEnd="10dp"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Category / "
                    android:textColor="@color/greyss"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/categoryName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" -"
                    android:textColor="@color/greyss"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="12sp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/productName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Product Name"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/light_black"
                android:textSize="14sp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="10"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="left">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Points"
                            android:fontFamily="@font/poppins_regular"
                            android:textSize="12sp"
                            android:textColor="@color/grey"/>

                        <TextView
                            android:id="@+id/points"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:gravity="center"
                            android:fontFamily="@font/poppins_regular"
                            android:textSize="16sp"
                            android:textColor="@color/dark"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:gravity="end"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="130dp"
                        android:layout_height="45dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/color52">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/minus_btn"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:text="-"
                                android:textColor="@color/white"
                                android:fontFamily="@font/poppins_bold"
                                android:layout_centerVertical="true"
                                android:gravity="center"
                                android:background="@drawable/quantity_bg"
                                android:layout_marginStart="5dp"/>

                            <TextView
                                android:id="@+id/cart_prod_count"
                                android:layout_width="40dp"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:backgroundTint="@color/color33"
                                android:fontFamily="@font/poppins_semibold"
                                android:gravity="center"
                                android:text="0"
                                android:textColor="@color/dark"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/plus_btn"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:text="+"
                                android:textColor="@color/white"
                                android:fontFamily="@font/poppins_bold"
                                android:layout_centerVertical="true"
                                android:layout_alignParentEnd="true"
                                android:gravity="center"
                                android:background="@drawable/quantity_bg"
                                android:layout_marginEnd="5dp"/>


                        </RelativeLayout>


                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>