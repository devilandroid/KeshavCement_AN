<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".ui.mySupportExecutive.NewSupportExecutiveFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5.5"
        android:padding="30dp"
        android:background="@drawable/bottom_corner_bg"
        android:orientation="vertical">

       <!-- Name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:text="*"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/red"
                    android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:background="@drawable/corner_bg4"
                android:backgroundTint="@color/color30">
                <EditText
                    android:id="@+id/name_edt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    android:fontFamily="@font/poppins_regular"
                    android:paddingStart="15dp"
                    android:paddingEnd="20dp"
                    android:hint="Enter Name"
                    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz_ "
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/colorAccent"
                    android:textColorHint="@color/color18"
                    android:textSize="12sp" />
            </LinearLayout>


        </LinearLayout>

        <!-- Mobile Number -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile Number"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:text="*"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/red"
                    android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:background="@drawable/corner_bg4"
                android:backgroundTint="@color/color30">
                <EditText
                    android:id="@+id/mobile_edt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    android:fontFamily="@font/poppins_regular"
                    android:inputType="number"
                    android:paddingStart="15dp"
                    android:paddingEnd="20dp"
                    android:maxLines="1"
                    android:maxLength="10"
                    android:singleLine="true"
                    android:hint="Enter Mobile Number"
                    android:textColor="@color/colorAccent"
                    android:textColorHint="@color/color18"
                    android:textSize="12sp" />
            </LinearLayout>


        </LinearLayout>

        <!-- Password -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:text="*"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/red"
                    android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:background="@drawable/corner_bg4"
                android:backgroundTint="@color/color30">
                <EditText
                    android:id="@+id/password_edt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    android:fontFamily="@font/poppins_regular"
                    android:inputType="text"
                    android:paddingStart="15dp"
                    android:paddingEnd="20dp"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:hint="Enter Password"
                    android:textColor="@color/colorAccent"
                    android:textColorHint="@color/color18"
                    android:textSize="12sp" />
            </LinearLayout>


        </LinearLayout>

        <!-- Submit Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal|bottom">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/submit_btn"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:paddingStart="40dp"
                android:paddingEnd="40dp"
                android:background="@drawable/corner_bg4"
                android:backgroundTint="@color/colorAccent"
                android:text="Submit"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/dark"
                android:textSize="12sp"
                android:textAllCaps="false" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.5"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/claim_img"
            android:scaleType="fitXY"/>
    </LinearLayout>

</LinearLayout>