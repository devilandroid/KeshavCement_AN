<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="DD/MM/YYYY"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <!-- Customer Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/cust_image"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/group_1014"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4.5"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/cust_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/dark"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/cust_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="-"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/dark"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/cust_mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="-"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/dark"
                    android:textSize="14sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.5"
                android:gravity="end|center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_location"/>
                <TextView
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="-"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/dark"
                    android:textSize="10sp"/>


            </LinearLayout>

        </LinearLayout>

        <!-- Product & Quantity -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="10">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Product Name"
                    android:textColor="@color/color16"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/prod_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="-"
                    android:textColor="@color/dark"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:orientation="vertical"
                android:gravity="center|end">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="3dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Order Quantity"
                    android:textColor="@color/color16"
                    android:textSize="12sp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="170dp"
                    android:layout_height="45dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/color39">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="visible"

                        android:weightSum="10">

                        <TextView
                            android:id="@+id/qty_minus"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:gravity="center"
                            android:text="-"
                            android:fontFamily="@font/poppins_medium"
                            android:background="@drawable/quantity_bg"
                            android:textColor="@color/colorAccent"
                            android:textSize="16sp"/>


                        <EditText
                            android:id="@+id/qty_textview"
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:background="@color/color33"
                            android:maxLength="6"
                            android:gravity="center"
                            android:textCursorDrawable="@drawable/cursor_clor"
                            android:inputType="number"
                            android:text=""
                            android:fontFamily="@font/poppins_semibold"
                            android:textColor="@color/dark"
                            android:textSize="16sp" />


                        <TextView
                            android:id="@+id/qty_plus"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:gravity="center"
                            android:text="+"
                            android:fontFamily="@font/poppins_medium"
                            android:background="@drawable/quantity_bg"
                            android:textColor="@color/colorAccent"
                            android:textSize="16sp" />


                    </LinearLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

        <!-- Remarks -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/remarks"
                android:textSize="12sp"
                android:textColor="@color/color16"/>

            <EditText
                android:id="@+id/remarks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="30dp"
                android:gravity="center_vertical"
                android:background="@drawable/refer_edttxt_bg"
                android:backgroundTint="@color/color13"
                android:textCursorDrawable="@drawable/cursor_clor"
                android:fontFamily="@font/poppins_regular"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:maxLength="500"
                android:text=""
                android:hint="@string/enter_remarks"
                android:textColor="@color/dark"
                android:textSize="12sp" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:background="@color/color36"/>

        <!--  Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <LinearLayout
                android:id="@+id/reject_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:background="@drawable/corner_bg5"
                android:backgroundTint="@color/color37">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reject"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/approve_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="vertical"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:background="@drawable/corner_bg5"
                android:backgroundTint="@color/color38">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Approve"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>